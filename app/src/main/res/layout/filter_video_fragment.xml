<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/theme"
            android:focusable="true"
            android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="center|top"
        android:focusable="true">


        <LinearLayout
            android:id="@+id/linearLayoutFilterVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/filterVideo_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="Keyword"
                android:textColor="#fefefe" />

            <EditText
                android:id="@+id/editTextVideo_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/gradient_edittext"
                android:hint="Keyword"
                android:padding="7dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/filterVideo_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="Category"
                android:textColor="#ffffff" />

            <Spinner
                android:id="@+id/spinnerVideo_category"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/gradient_spinner"
                android:gravity="center" />


            <TextView
                android:id="@+id/filterVideo_sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="Sort by"
                android:textColor="#ffffff"/>

            <Spinner
                android:id="@+id/spinnerVideo_sort"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/gradient_spinner" />

            <TextView
                android:id="@+id/filterVideo_per_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="Number of videos"
                android:textColor="#ffffff"/>

            <Spinner
                android:id="@+id/spinnerVideo_per_page"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/gradient_spinner" />

            <Button
                android:id="@+id/filterVideo_button"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:text="Search"
                android:textColor="@color/color_change"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>