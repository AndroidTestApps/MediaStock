<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffeeeeee"
            android:focusable="true"
            android:focusableInTouchMode="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/video_linearLayoutVideo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_video_player_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/video_linearLayoutVideo_title"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#DE000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/video_linearLayout_surface"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="75dp"
            android:background="#000000"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <SurfaceView
                android:id="@+id/surfaceview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/relll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/seekBar_video"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/button_pausevideoplayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/gradient_button"
                    android:text="@string/pause"
                    android:textColor="#f4000000"/>

                <Button
                    android:id="@+id/button_playvideoplayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/button_pausevideoplayer"
                    android:background="@drawable/gradient_button"
                    android:text="@string/play"
                    android:textColor="#f4000000"/>


            </LinearLayout>
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBar_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/video_linearLayout_surface"
            android:layout_below="@+id/video_linearLayout_surface"
            android:layout_marginTop="45dp"/>

        <TextView
            android:id="@+id/textView2_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/seekBar_video"
            android:layout_below="@+id/video_linearLayout_surface"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="0 min, 0sec"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#8A000000"/>

        <TextView
            android:id="@+id/textView3_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2_video"
            android:layout_alignBottom="@+id/textView2_video"
            android:layout_alignRight="@+id/seekBar_video"
            android:layout_marginRight="10dp"
            android:text="0 min, 0sec"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#8A000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            >
        </LinearLayout>

    </RelativeLayout>

</ScrollView>