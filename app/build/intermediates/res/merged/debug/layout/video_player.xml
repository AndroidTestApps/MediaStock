<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="431dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:id="@+id/video_linearLayoutVideo_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_video_player_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/video_linearLayoutVideo_title"
                android:layout_alignParentTop="true"
                android:text="text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/video_linearLayout_surface"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/shape"
            android:orientation="vertical" >

            <SurfaceView
                android:id="@+id/surfaceview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2_video"
            android:layout_alignParentBottom="true" >

            <Button
                android:id="@+id/button_videoPlayer_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button3"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/button3"
                android:background="@drawable/shape"
                android:text="@string/back_f" />

            <Button
                android:id="@+id/button_pausevideoplayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button"
                android:layout_alignBottom="@+id/button"
                android:layout_alignStart="@+id/imageView"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/button"
                android:background="@drawable/shape"
                android:text="@string/pause" />

            <Button
                android:id="@+id/button_playvideoplayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button2"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/button2"
                android:background="@drawable/shape"
                android:text="@string/play" />

            <Button
                android:id="@+id/button_videoPlayer_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:text="@string/forward" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBar_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/video_linearLayout_surface"
            android:layout_below="@+id/video_linearLayout_surface"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/textView2_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/seekBar_video"
            android:layout_below="@+id/video_linearLayout_surface"
            android:layout_marginTop="16dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView3_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2_video"
            android:layout_alignBottom="@+id/textView2_video"
            android:layout_alignRight="@+id/seekBar_video"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

</ScrollView><!-- From: file:/home/dinu/AndroidStudio_projects/MediaStock/app/src/main/res/layout/video_player.xml -->