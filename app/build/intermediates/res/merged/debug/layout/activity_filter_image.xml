<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:layout_gravity="center|top"
        android:focusable="true" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/filter_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="Image search"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/filter_category"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="Category"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                  />

            <TextView
                android:id="@+id/filter_sortBy"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="Sort by"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinner_sortBy"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/filter_orientation"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="Orientation"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinner_orientation"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                 />
            
            <TextView
                android:id="@+id/filter_per_page"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="Number of images"
                android:textColor="@color/black" />
            
             <Spinner
                android:id="@+id/spinner_per_page"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/filter_button_search"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:text="Search"
                android:textColor="@color/color_change" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView><!-- From: file:/home/dinu/AndroidStudio_projects/MediaStock/app/src/main/res/layout/activity_filter_image.xml -->